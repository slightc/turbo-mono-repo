{
	"compilerOptions": {
		"module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
		"outDir": "lib",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"lib"
	]
}
